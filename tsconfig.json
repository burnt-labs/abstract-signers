{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/declarations",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@app/*": [
        "./src/*"
      ]}
  },
  "exclude": [
    "node_modules",
  ]
}